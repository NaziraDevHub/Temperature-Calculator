<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/temparature"
    android:padding="20dp"
    >




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temp Calculator"
                    android:textSize="30sp"
                    android:background="@drawable/custom_celcious"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#.Measure in celcious scale"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginTop="75dp"
            />

        <EditText
            android:id="@+id/edCelcious"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/bToast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert Fahrenheit"
            android:textColor="#009688"
            android:backgroundTint="#CDDC39"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="25dp"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#.Measure in fahrenheit scale"
            android:textSize="25dp"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/edFahrenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/bToast2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert Celcious"
            android:textColor="#009688"
            android:backgroundTint="#CDDC39"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:textSize="25dp"
            />








</LinearLayout>